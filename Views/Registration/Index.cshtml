@{
    ViewData["Title"] = "Home Page";
}
@model Registration.Models.RegisterViewModel
<h1>Login Registration</h1>

<h3>Registration Form</h3>
<form asp-controller="Registration" asp-action="create" method="POST">
    <label asp-for="FirstName"></label><input asp-for="FirstName"/><span asp-validation-for="FirstName"></span><br>
    <label asp-for="LastName"></label><input asp-for="LastName"/><span asp-validation-for="LastName"></span><br>
    <label asp-for="UserName"></label><input asp-for="UserName"/><span asp-validation-for="UserName"></span><span>@ViewBag.UNErrors</span><br>
    <label asp-for="Email"></label><input asp-for="Email"/><span asp-validation-for="Email"></span><span>@ViewBag.EMErrors</span><br>
    <label asp-for="Password"></label><input asp-for="Password"/><span asp-validation-for="Password"></span><br>
    <label asp-for="PasswordConfirmation"></label><input asp-for="PasswordConfirmation"/><span asp-validation-for="PasswordConfirmation"></span><br>
    <label asp-for="DOB"></label><input type="date"asp-for="DOB"/><span asp-validation-for="DOB"></span><br>
    <input type="Submit" value="Register!"> 
</form>
